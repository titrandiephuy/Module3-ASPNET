@model Currency
@{
    ViewData["Title"] = "Currency Converter";
}
<form asp-controller="CurrencyConverter" asp-action="Index" method="post">
    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="USD"> Amount of USD</label>
            <input asp-for="USD" class="form-control" value="@Model.USD"/>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Rate"> Exchange Rate</label>
            <input asp-for="Rate" class="form-control" value="@Model.Rate"/>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Result"> Result</label>
            <input asp-for="Result" class="form-control" readonly value="@Model.Result"/>
        </div>

    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary">Convert</button>
    </div>
</form>