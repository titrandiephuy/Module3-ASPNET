
@model Translate
@{
    ViewData["Title"] = "Dictionary";
}

<form method="post" asp-controller="Dictionary" asp-action="Translate">
    <div class="row">
        <div class="form-group col-sm-6">
            <label asp-for="Keyword"></label>
            <input asp-for="Keyword" class="form-control" value="@Model.Keyword" autocomplete="off" />
            <span asp-validation-for="Keyword" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Result"></label>
            <input asp-for="Result" class="form-control" readonly value="@Model.Result" />
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-danger">Translate</button>
    </div>
</form>