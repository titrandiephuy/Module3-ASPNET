@model Discount
@{
    ViewData["Title"] = "Calculate Discount";
}
<form method="post" asp-controller="Home" asp-action="Index">
    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="ProductDes">Product Description</label>
            <input asp-for="ProductDes" value="@Model.ProductDes" class="form-control" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="ListPrice">List Price</label>
            <input asp-for="ListPrice" value="@Model.ListPrice" class="form-control" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="DiscountPercent">Discount Percent</label>
            <input asp-for="DiscountPercent" value="@Model.DiscountPercent" class="form-control" />
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-danger">Calculate</button>
    </div>
</form>